{
    "env" : {
        "esp-idf-path": "/opt/esp-idf"
    },
    "configurations": [
        {
            "name": "Linux",
            "intelliSenseMode": "gcc-x64",
            "compilerPath": "/opt/xtensa-esp32-elf/bin/xtensa-esp32-elf-g++",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "defines": [],
            "includePath": [
                "${workspaceFolder}",
                "${workspaceFolder}/main",
                "${workspaceFolder}/components/**",
                "${esp-idf-path}/components/**"
            ],
            "browse": {
                "limitSymbolsToIncludedHeaders": false
            }
        }
    ],
    "version": 4
}