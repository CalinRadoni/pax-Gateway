{
    "version": "2.0.0",
    "linux": {
        "type": "shell",
        "options": {
            "cwd": "${workspaceFolder}",
            "env": {
                "ESP-IDF": "/opt/esp-idf"
            }
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false
        },
    },
    "tasks": [
        {
            "label": "ESP-IDF Build",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "build" ],
            "group": "build"
        },
        {
            "label": "ESP-IDF Clean",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "clean" ],
        },
        {
            "label": "ESP-IDF Flash",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "-p", "/dev/ttyUSB0", "flash" ],
        },
        {
            "label": "ESP-IDF Monitor",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "-p", "/dev/ttyUSB0", "monitor" ],
        },
        {
            "label": "ESP-IDF MenuConfig",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "menuconfig" ],
        },
        {
            "label": "ESP-IDF Build partition table",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "partition_table" ],
        },
        {
            "label": "ESP-IDF Flash partition table",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "partition_table-flash" ],
        },
        {
            "label": "ESP-IDF Size informations",
            "command": "/opt/esp-idf/tools/idf.py",
            "args": [ "size-components" ],
        }
    ]
}